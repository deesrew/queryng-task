{% extends "base.html.twig" %}

{% block navbar %}
    {{ include('main/_navbar.html.twig') }}
{% endblock %}

{% block container %}

    <div class="h1">Generate</div>

    <div class="row">
        <div class="col-sm-8">

            <div class="h2">Form</div>

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.hasDictionaryDef) }}</label>
                {{ form_widget(form.hasDictionaryDef, {'attr': {'class': 'form-select'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.hasDictionaryDef) }}
                    {{ form_help(form.hasDictionaryDef) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.minCorpusCount) }}</label>
                {{ form_widget(form.minCorpusCount, {'attr': {'class': 'form-control'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.minCorpusCount) }}
                    {{ form_help(form.minCorpusCount) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.minLength) }}</label>
                {{ form_widget(form.minLength, {'attr': {'class': 'form-control'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.minLength) }}
                    {{ form_help(form.minLength) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.maxLength) }}</label>
                {{ form_widget(form.maxLength, {'attr': {'class': 'form-control'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.maxLength) }}
                    {{ form_help(form.maxLength) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.limit) }}</label>
                {{ form_widget(form.limit, {'attr': {'class': 'form-control'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.limit) }}
                    {{ form_help(form.limit) }}
                </div>
                <div class="form-text">max size 500</div>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>

            {{ form_end(form) }}
        </div>
        <div class="col-sm-4">
            <div class="h2">Info</div>
        </div>
    </div>

{% endblock %}