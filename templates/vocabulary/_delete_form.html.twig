<div class="mt-2">
    <form method="post"
          action="{{ path('vocabulary_delete', {'id': vocabulary.id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vocabulary.id) }}">
        <button class="btn btn-lg btn-primary" class="btn">Delete</button>
    </form>
</div>
