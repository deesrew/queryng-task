{% extends 'base.html.twig' %}

{% block navbar %}
    {{ include('main/_navbar.html.twig') }}
{% endblock %}

{% block container %}
    <h1>Create new Task</h1>

    <div class="row">
        <div class="col-sm-8">

            <div class="h2">Form</div>

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.field1) }}</label>
                {{ form_widget(form.field1, {'attr': {'class': 'form-select'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.field1) }}
                    {{ form_help(form.field1) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.field2) }}</label>
                {{ form_widget(form.field2, {'attr': {'class': 'form-control'}}) }}
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.field2) }}
                    {{ form_help(form.field2) }}
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.date_created) }}</label>
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_widget(form.date_created, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div id="emailHelp" class="form-text">
                    {{ form_errors(form.date_created) }}
                    {{ form_help(form.date_created) }}
                </div>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>

            {{ form_end(form) }}

        </div>

        <div class="col-sm-4">
            <div class="h2">Info</div>
            <div class="fs-3">
                Очередь выбирается случайно
            </div>
            <div class="fs-1">
                {% if info %}
                    {{ info }}
                {% endif %}
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-secondary" href="{{ path('task_index') }}">back to list</a>
    </div>

{% endblock %}
